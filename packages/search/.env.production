# Environment
NODE_ENV=production

# OpenSearch Configuration
OPENSEARCH_DOMAIN_ENDPOINT=https://search.gofer.com
OPENSEARCH_MASTER_USER=admin
OPENSEARCH_MASTER_PASSWORD=${PROD_SEARCH_PASSWORD}
OPENSEARCH_INDEX_PREFIX=prod

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=gofer-prod

# VPC Configuration
VPC_ID=vpc-prod
SUBNET_IDS=subnet-prod-1,subnet-prod-2,subnet-prod-3
SECURITY_GROUP_ID=sg-prod

# Performance & Resilience
MAX_CONNECTIONS=50
CONNECTION_TIMEOUT=5000
REQUEST_TIMEOUT=30000
RETRY_COUNT=5
BULK_SIZE=200

# Monitoring
ENABLE_DEBUG_LOGGING=false
APM_SERVICE_NAME=gofer-search-prod
TELEMETRY_ENABLED=true
