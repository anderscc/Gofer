# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=gofer

# API Configuration
PORT=3000
NODE_ENV=development
API_URL=http://localhost:3000/api
CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# Auth Configuration
COGNITO_USER_POOL_ID=us-east-1_xxxxxx
COGNITO_USER_POOL_WEB_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxx
COGNITO_IDENTITY_POOL_ID=us-east-1:xxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxx

# Database Configuration
TASKS_TABLE_NAME=tasks-${NODE_ENV}
USERS_TABLE_NAME=users-${NODE_ENV}
TASKS_TABLE_STREAM_ARN=arn:aws:dynamodb:${AWS_REGION}:xxxxxxxxxxxx:table/${TASKS_TABLE_NAME}/stream/timestamp

# Search Configuration
OPENSEARCH_DOMAIN_ENDPOINT=https://xxxxx.us-east-1.es.amazonaws.com
OPENSEARCH_MASTER_USER=admin
OPENSEARCH_MASTER_PASSWORD=xxxxxxxxxxxxxxxxxxxxxx

# Lambda Configuration
LAMBDA_TASK_INDEXER_ROLE_ARN=arn:aws:iam::xxxxxxxxxxxx:role/gofer-task-indexer
LAMBDA_TASK_INDEXER_SECURITY_GROUP_ID=sg-xxxxx
LAMBDA_TASK_INDEXER_SUBNET_IDS=subnet-xxxxx,subnet-yyyyy

# File Storage
S3_BUCKET_NAME=gofer-uploads-${NODE_ENV}
S3_REGION=${AWS_REGION}

# Monitoring & Logging
LOG_LEVEL=debug
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# Performance
MAX_CONNECTIONS=100
CACHE_TTL=300
