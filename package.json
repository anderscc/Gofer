{
  "name": "gofer",
  "private": true,
  "scripts": {
    "dev:web": "pnpm validate-env && pnpm --filter @gofer/web dev",
    "dev:mobile": "pnpm validate-env && pnpm --filter @gofer/mobile start",
    "build:web": "pnpm validate-env && pnpm --filter @gofer/web build",
    "build:mobile": "pnpm validate-env && pnpm --filter @gofer/mobile build",
    "build:packages": "pnpm --filter \"@gofer/!(web|mobile)\" build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "validate-env": "ts-node scripts/validate-env.ts",
    "switch-env": "./scripts/switch-env.sh"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "^16.4.7",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "zod": "^3.25.56"
  }
}
